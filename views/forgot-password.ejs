                }
                .admin-form h1 {
                    margin: 0;
                    padding: 0 0 20px;
                    color: #f0ffff;
                    font-family: 'Times New Roman', serif;
                    
                }
                .admin-form p {
                    margin: 0;
                    padding: 0;
                    color: #fff;
                }
                .admin-form input {
                    width: 70%;
                    height: 100%;
                    margin-bottom: 50px;
                }
                .admin-form label {
                    color: #000000;
                }
                .admin-form th {
                    color: #000000;
                    width: auto !important;
                }
                .admin-form td {
                    color: #ffffff;
                    width: auto !important;
                }
                .admin-form button {
                    height: 30px;
                    color: rgb(0, 0, 0);
                    font-family: 'Times New Roman', ;
                    font-size: 20px;
                    background: rgb(248, 249, 250);
                    cursor: pointer;
                    border-radius: 100px;
                    border: none;
