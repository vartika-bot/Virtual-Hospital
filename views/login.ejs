	<div class="container">
		<div class="col-sm-6 autocenter">
			<div class="card">
				<div class="card-header">
					<h4 style="font-size:3vw" >Log In</h4>
				</div>
				<div class="card-body">
					<form action="/login" method="post" class="needs-validation" novalidate autocomplete="off">
					  <div class="form-group">
					     <label for="email">Email address:</label>
					     <input type="email" class="form-control" placeholder="Enter email" name="email" id="email" required>
					     <div class="invalid-feedback">Please fill valid email address.</div>
					  </div>
					  <div class="password-show-card">
					    <label for="password">Password:</label>
					    <input type="password" class="input-control" placeholder="Enter password" name="password" id="password" required>
						<i class="fa fa-eye password-show"></i>
		   		        <div class="invalid-feedback">Please fill out this field.</div>
					  </div>
					  <script src="js/jquery-latest.min.js"></script>
							<script>
								$(function(){
									$(".password-show").click(function(event) {
										$(this).toggleClass('fa-eye-slash');
										var x = $(".input-control").attr("type"); //getting attribute in variable
										if (x == "password") 
										{
											$(".input-control").attr("type","text"); //setting attribute on condition
										}
										else
										{
											$(".input-control").attr("type","password");
										}
									});
								})
							</script>
							<br>
					  <button type="submit" class="btn btn-primary">Submit</button>
					  <br>
					  <br>
					  <a href="/forgot-password">Forgot Password...?Click Here</a>
					  <br>
					  <br>
					  <a href="/register">Don't have an account? Create One.</a>
					</form>
				</div>
